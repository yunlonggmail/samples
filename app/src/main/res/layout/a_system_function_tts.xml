<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_normal_f"
    android:orientation="vertical">

    <include layout="@layout/i_tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/normal_width_10">

        <EditText
            android:id="@+id/et_tts_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_width_30"
            android:background="@drawable/a_login_et_bg"
            android:gravity="center_horizontal"
            android:hint="@string/a_tts_et_hint"
            android:lines="1"
            android:padding="@dimen/normal_width_10"
            android:textColor="@color/color_normal_3"
            android:textColorHint="@color/a_login_account_hint"
            android:textSize="@dimen/text_size_normal_6" />

        <Button
            android:id="@+id/btn_speech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_width_30"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:padding="@dimen/normal_width_10"
            android:text="@string/a_tts_start"
            android:textColor="@color/color_normal_3"
            android:textSize="@dimen/text_size_normal_8" />

    </LinearLayout>

</LinearLayout>