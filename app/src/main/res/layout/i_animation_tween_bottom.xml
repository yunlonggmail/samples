<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_normal_f"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_start_java"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_width_30"
        android:background="@drawable/button_bg"
        android:padding="@dimen/normal_width_10"
        android:text="@string/a_animation_tween_all_btn_start_java"
        android:textColor="@color/color_normal_3"
        android:textSize="@dimen/text_size_normal_8" />

    <Button
        android:id="@+id/btn_start_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_width_30"
        android:background="@drawable/button_bg"
        android:padding="@dimen/normal_width_10"
        android:text="@string/a_animation_tween_all_btn_start_xml"
        android:textColor="@color/color_normal_3"
        android:textSize="@dimen/text_size_normal_8" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/normal_width_50"
        android:src="@mipmap/logo" />

</LinearLayout>