<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue">

        <Button
            android:id="@+id/btn_right_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_width_30"
            android:background="@drawable/button_bg"
            android:padding="@dimen/normal_width_10"
            android:text="@string/a_custom_lrmenu_right_btn"
            android:textColor="@color/color_normal_3"
            android:textSize="@dimen/text_size_normal_8" />
    </LinearLayout>
</FrameLayout>