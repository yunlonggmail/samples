<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_normal_f"
    android:orientation="vertical">

    <include layout="@layout/i_tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/normal_width_10">

        <TextView
            android:id="@+id/tv_sensor_accelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_normal_6"
            android:textSize="@dimen/text_size_normal_8" />

        <TextView
            android:id="@+id/tv_sensor_gyroscope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_normal_6"
            android:textSize="@dimen/text_size_normal_8" />

        <TextView
            android:id="@+id/tv_sensor_gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_normal_6"
            android:textSize="@dimen/text_size_normal_8" />

        <TextView
            android:id="@+id/tv_sensor_proximity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_normal_6"
            android:textSize="@dimen/text_size_normal_8" />

        <TextView
            android:id="@+id/tv_sensor_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_normal_6"
            android:textSize="@dimen/text_size_normal_8" />

        <Button
            android:id="@+id/btn_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_width_30"
            android:background="@drawable/button_bg"
            android:padding="@dimen/normal_width_10"
            android:text="@string/common_start_record_log"
            android:textColor="@color/color_normal_3"
            android:textSize="@dimen/text_size_normal_8" />
    </LinearLayout>

</LinearLayout>