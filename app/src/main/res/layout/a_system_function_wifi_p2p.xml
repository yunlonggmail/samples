<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_normal_f"
    android:orientation="vertical">

    <include layout="@layout/i_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_normal_f">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/normal_width_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_wifi_p2p_start_discover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_width_30"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:padding="@dimen/normal_width_10"
                    android:text="@string/a_wifi_p2p_discover"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_8" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_client_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width_30"
                android:background="@drawable/a_login_et_bg"
                android:gravity="center_horizontal"
                android:hint="@string/a_bluetooth_client_msg"
                android:lines="1"
                android:padding="@dimen/normal_width_10"
                android:textColor="@color/color_normal_3"
                android:textColorHint="@color/a_login_account_hint"
                android:textSize="@dimen/text_size_normal_6" />

            <Button
                android:id="@+id/btn_connect_wifi_p2p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width_30"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:padding="@dimen/normal_width_10"
                android:text="@string/a_wifi_p2p_connect"
                android:textColor="@color/color_normal_3"
                android:textSize="@dimen/text_size_normal_8" />

            <Button
                android:id="@+id/btn_send_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width_30"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:padding="@dimen/normal_width_10"
                android:text="@string/a_wifi_p2p_send_msg"
                android:textColor="@color/color_normal_3"
                android:textSize="@dimen/text_size_normal_8"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_wifi_p2p_devices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_width_10"
                android:background="@color/color_normal_f" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>