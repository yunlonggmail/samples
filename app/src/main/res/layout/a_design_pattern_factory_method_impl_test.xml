<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/i_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_normal_f"
        android:padding="@dimen/normal_width_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/normal_width_5"
                android:textColor="@color/color_normal_3"
                android:textSize="@dimen/text_size_normal_4" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_product_a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/a_design_pattern_factory_method_test_product_concrete_a"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_4" />

                <RadioButton
                    android:id="@+id/rb_product_b"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/a_design_pattern_factory_method_test_product_concrete_b"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_4" />

            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width_10">

                <TextView
                    android:id="@+id/tv_product_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/a_design_pattern_factory_method_test_product_concrete_model"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_4" />

                <EditText
                    android:id="@+id/et_product_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/normal_width_10"
                    android:layout_marginStart="@dimen/normal_width_10"
                    android:layout_toEndOf="@id/tv_product_model"
                    android:layout_toRightOf="@id/tv_product_model"
                    android:background="@drawable/a_login_et_bg"
                    android:inputType="number"
                    android:padding="@dimen/normal_width_10"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_6" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width_10">

                <TextView
                    android:id="@+id/tv_product_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/a_design_pattern_factory_method_test_product_concrete_model"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_4" />

                <EditText
                    android:id="@+id/et_product_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/normal_width_10"
                    android:layout_marginStart="@dimen/normal_width_10"
                    android:layout_toEndOf="@id/tv_product_desc"
                    android:layout_toRightOf="@id/tv_product_desc"
                    android:background="@drawable/a_login_et_bg"
                    android:lines="2"
                    android:padding="@dimen/normal_width_10"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_6" />

            </RelativeLayout>


            <Button
                android:id="@+id/btn_factory_method_produce_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/normal_width_10"
                android:background="@drawable/button_bg"
                android:padding="@dimen/normal_width_5"
                android:text="@string/a_design_pattern_factory_method_test_produce_product"
                android:textColor="@color/color_normal_3"
                android:textSize="@dimen/text_size_normal_4" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>