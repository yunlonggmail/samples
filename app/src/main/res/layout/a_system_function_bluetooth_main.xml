<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_normal_f"
    android:orientation="vertical">

    <include layout="@layout/i_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_normal_f">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/normal_width_10">

            <TextView
                android:id="@+id/tv_bluetooth_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width_10"
                android:padding="@dimen/normal_width_10"
                android:textColor="@color/color_normal_3"
                android:textSize="@dimen/text_size_normal_6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_normal_open_bluetooth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_width_5"
                    android:layout_marginTop="@dimen/normal_width_30"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:padding="@dimen/normal_width_10"
                    android:text="@string/a_bluetooth_normal_open"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_8" />

                <Button
                    android:id="@+id/btn_silent_open_bluetooth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_width_5"
                    android:layout_marginTop="@dimen/normal_width_30"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:padding="@dimen/normal_width_10"
                    android:text="@string/a_bluetooth_silent_open"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_8" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_client_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width_30"
                android:background="@drawable/a_login_et_bg"
                android:gravity="center_horizontal"
                android:hint="@string/a_bluetooth_client_msg"
                android:lines="1"
                android:padding="@dimen/normal_width_10"
                android:textColor="@color/color_normal_3"
                android:textColorHint="@color/a_login_account_hint"
                android:textSize="@dimen/text_size_normal_6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width_10">

                <Button
                    android:id="@+id/btn_create_bluetooth_server"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_width_5"
                    android:layout_marginTop="@dimen/normal_width_30"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:padding="@dimen/normal_width_10"
                    android:text="@string/a_bluetooth_create_server"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_8" />

                <Button
                    android:id="@+id/btn_create_bluetooth_client"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_width_5"
                    android:layout_marginTop="@dimen/normal_width_30"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:padding="@dimen/normal_width_10"
                    android:text="@string/a_bluetooth_create_client"
                    android:textColor="@color/color_normal_3"
                    android:textSize="@dimen/text_size_normal_8" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_bluetooth_discovery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width_30"
                android:background="@drawable/button_bg"
                android:padding="@dimen/normal_width_10"
                android:text="@string/a_bluetooth_start_discovery"
                android:textColor="@color/color_normal_3"
                android:textSize="@dimen/text_size_normal_8" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_bluetooth_devices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_normal_f" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>