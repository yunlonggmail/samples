<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/i_tool_bar" />

    <com.yunlong.samples.custom.trebling.TreblingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="文件"
        android:textColor="@color/green"
        android:textSize="@dimen/text_size_normal_8"
        app:bottom_text="文件"
        app:bottom_text_color="@color/black"
        app:stroke_color="@color/blue"
        app:stroke_radius="@dimen/normal_width_5"
        app:text_size="@dimen/text_size_normal_8" />

</RelativeLayout>