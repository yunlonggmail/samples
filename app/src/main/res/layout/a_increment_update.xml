<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_normal_f"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_bg"
        app:titleTextColor="@color/color_normal_0" />

    <Button
        android:id="@+id/btn_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_width_20"
        android:layout_marginTop="@dimen/normal_width_30"
        android:background="@drawable/button_bg"
        android:padding="@dimen/normal_width_10"
        android:text="@string/a_increment_update_generate_new_apk"
        android:textColor="@color/color_normal_3"
        android:textSize="@dimen/text_size_normal_8" />

    <Button
        android:id="@+id/btn_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_width_20"
        android:layout_marginTop="@dimen/normal_width_30"
        android:background="@drawable/button_bg"
        android:padding="@dimen/normal_width_10"
        android:text="@string/a_increment_update_install_new_apk"
        android:textColor="@color/color_normal_3"
        android:textSize="@dimen/text_size_normal_8" />

</LinearLayout>