<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LRMenu">
        <attr name="left_menu_width_percent" format="float" />
        <attr name="right_menu_width_percent" format="float" />
        <attr name="masked_menu_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TreblingView">
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="color" />
        <attr name="stroke_radius" format="dimension" />
        <attr name="bottom_text_color" format="color" />
        <attr name="middle_fill_color" format="color" />
        <attr name="middle_fill_percent" format="integer" />
        <attr name="top_text_color" format="color" />
    </declare-styleable>
    <declare-styleable name="WaveView">
        <attr name="above_color" format="color" />
        <attr name="above_alpha" format="integer" />
        <attr name="below_color" format="color" />
        <attr name="below_alpha" format="integer" />
        <attr name="amplitude" format="float" />
        <attr name="x_offset_step" format="float" />
        <attr name="y_offset" format="float" />
        <attr name="post_delay" format="integer" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="bottom_text_stroke_color" format="color" />
        <attr name="bottom_text_fill_color" format="color" />
        <attr name="top_text_stroke_color" format="color" />
        <attr name="top_text_fill_color" format="color" />
        <attr name="text" format="string" />
        <attr name="text_size" format="dimension" />
        <attr name="text_width" format="dimension" />
        <attr name="circle_stroke_color" format="color" />
        <attr name="circle_stroke_width" format="dimension" />
        <attr name="circle_fill_color" format="color" />
    </declare-styleable>
</resources>